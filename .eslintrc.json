{
    "extends": [
        "eslint:recommended", //
        "next/core-web-vitals",
        "plugin:import/recommended",
        "plugin:import/typescript",
        "prettier" // eslint-config-prettier 必ずextendsの最後に設置する
    ],
    "plugins": [
        "import", // import順を強制
        "react-refresh" // reactのfast refresh機能が効率的に動作するためのコードパターンを強制
    ],
    "rules": {
        "@typescript-eslint/ban-ts-comment": "off", // @ts-ignore等の使用許可
        "@typescript-eslint/no-explicit-any": "off", // anyの使用許可
        "react-refresh/only-export-components": ["warn", { "allowConstantExport": true }],
        "import/newline-after-import": ["error", { "count": 1 }], // ファイル冒頭import文の塊の後に1行必須
        "import/order": [
            "warn",
            {
                "groups": ["builtin", "external", "internal", ["parent", "sibling"], "object", "type", "index"],
                "newlines-between": "always",
                "pathGroupsExcludedImportTypes": ["builtin"],
                "alphabetize": {
                    "order": "asc",
                    "caseInsensitive": true
                },
                "pathGroups": [
                    {
                        "pattern": "react",
                        "group": "external",
                        "position": "before"
                    }
                ]
            }
        ]
    }
}
